<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_page_image"
    tools:context=".user_confirm_final_order">

    <TextView
        android:id="@+id/txt"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLEASE CONFIRM SHIPMENT DETAILS"
        android:textSize="21dp"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />

    <EditText

        android:drawableStart="@drawable/ic_baseline_arrow_forward_ios_24"
        android:id="@+id/Shipment_Name"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Name"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24" />

    <EditText

        android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
        android:id="@+id/Shipment_PhoneNumber"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:maxLength="10"
        android:layout_below="@id/Shipment_Name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:hint="Your Phone Number"
        android:drawableLeft="@drawable/ic_baseline_phone_iphone_24" />

    <EditText

        android:drawableStart="@drawable/ic_address"
        android:id="@+id/Shipment_Address"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Shipment_PhoneNumber"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Address"
        android:drawableLeft="@drawable/ic_address" />

    <EditText

        android:drawableStart="@drawable/ic_address"
        android:id="@+id/Shipment_City"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_height="wrap_content"
        android:layout_below="@id/Shipment_Address"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your City Name"
        android:drawableLeft="@drawable/ic_address" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Confrim_Final_order_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="319dp"
        android:background="@drawable/custom_button"
        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:gravity="center"
        android:text="CONFIRM"
        android:textColor="@color/white"
        android:textSize="20dp" />

</RelativeLayout>