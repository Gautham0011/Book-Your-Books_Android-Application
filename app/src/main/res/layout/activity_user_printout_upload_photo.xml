<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/admin_login_imagee"
    android:layout_height="match_parent"
    tools:context=".user_printout_upload_photo">

    <ImageView
        android:id="@+id/add_new_user_print_image"
        android:layout_width="311dp"
        android:layout_height="228dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/addproduct" />
    <EditText
        android:id="@+id/new_user_photo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_arrow_forward_ios_24"
        android:inputType="textMultiLine"
        android:layout_below="@+id/add_new_user_print_image"
        android:layout_marginTop="20dp"
        android:hint="Product Description"
        android:textColorHint="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24" />
    <EditText
        android:id="@+id/new_user_number_of_copies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:layout_below="@+id/new_user_photo_description"
        android:layout_marginTop="6dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_baseline_arrow_forward_ios_24"
        android:hint="Number of Copies"
        android:textColorHint="@color/black"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_new_photo_btn"
        android:layout_width="116dp"
        android:layout_height="120dp"
        android:layout_below="@id/new_user_number_of_copies"
        android:layout_marginStart="155dp"
        android:layout_marginLeft="155dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="145dp"
        android:background="@drawable/custom_button"
        android:padding="17dp"
        android:text="Add Photo"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>