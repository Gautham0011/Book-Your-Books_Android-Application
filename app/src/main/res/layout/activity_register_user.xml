<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterUser">




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:scrollbarSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:background="@drawable/loginn_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bmsitlogo"
                    android:layout_width="291dp"
                    android:layout_height="274dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/bmsitlogo" />

                <EditText
                    android:id="@+id/fullname"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:layout_width="352dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:paddingTop="10dp"
                    android:textColorHint="@color/black"
                    android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24" />

                <EditText
                    android:id="@+id/userbranch"
                    android:layout_width="352dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:ems="10"
                    android:hint="Branch"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/black"
                    android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24" />

                <EditText
                    android:id="@+id/userusn"
                    android:layout_width="352dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="USN"
                    android:maxLength="10"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:inputType="textPersonName"
                    android:drawableStart="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:textColorHint="@color/black"
                    android:drawableLeft="@drawable/ic_baseline_arrow_forward_ios_24" />

                <EditText
                    android:id="@+id/usermobileno"
                    android:layout_width="352dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="Mobile Number"
                    android:maxLength="10"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
                    android:inputType="number"
                    android:textColorHint="@color/black"
                    android:drawableLeft="@drawable/ic_baseline_phone_iphone_24" />

                <EditText
                    android:id="@+id/registeredemail"
                    android:layout_width="352dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:hint="Email"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/black"
                    android:drawableLeft="@drawable/ic_baseline_email_24" />

                <EditText
                    android:id="@+id/registeredpassword"
                    android:layout_width="352dp"
                    android:drawableStart="@drawable/ic_baseline_lock_24"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="Password"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custom_input"
                    android:inputType="textPassword"
                    android:textColorHint="@color/black"
                    android:drawableLeft="@drawable/ic_baseline_lock_24" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/registeruser"
                    android:background="@drawable/custom_button"
                    android:layout_width="352dp"
                    android:layout_height="45dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:text="register"
                    android:layout_marginTop="5dp"
                    android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:textSize="22dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/registerlogin"
                    android:background="@drawable/custom_roundbutton"
                    android:layout_width="150dp"
                    android:textColor="@color/white"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:text="log in"
                    android:layout_marginTop="5dp"
                    android:textSize="18dp"/>


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>


